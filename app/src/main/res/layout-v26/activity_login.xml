<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.dezconto.dezconto_prot.LoginActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/back"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/imgbg" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        app:srcCompat="@drawable/gradient_login"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="42dp"
        android:contentDescription="@string/gradient_image" />

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="231dp"
        android:layout_height="117dp"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dezcontologo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/border"
        android:drawableLeft="@mipmap/enter"
        android:drawableStart="@mipmap/enter"
        android:textAlignment="center"
        android:paddingLeft="30dip" android:paddingRight="26dip"
        android:textSize="11sp"
        android:text="@string/btnEntrar"
        android:textColor="@color/colorPrincipal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp"
        android:paddingStart="11dip"
        android:paddingEnd="14dip" />

    <Button
        android:id="@+id/btnCriarConta"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:background="@android:color/transparent"
        android:text="@string/btnLojista"
        android:textColor="@color/colorBorder"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/btnSignGg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/gg"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="208dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogin"/>

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:drawableBottom="@color/colorBorder"
        android:drawableLeft="@mipmap/man_user"
        android:drawableStart="@mipmap/man_user"
        android:ems="10"
        android:hint="@string/emailL"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogin"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/loginSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableBottom="@color/colorBorder"
        android:ems="10"
        android:hint="@string/senhaL"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginEmail"
        android:drawableLeft="@mipmap/house_key"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        android:drawableStart="@mipmap/house_key" />

    <ProgressBar
        android:id="@+id/progressBarL"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />





</android.support.constraint.ConstraintLayout>
